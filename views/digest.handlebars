<body>
	<!-- NAVBAR -->
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu">
				<span class="sr-only">Toggle navigation</span>
			</button>

			<!-- Weyaka home button -->
			<a class="navbar-brand" href="/home">Weyaka</a>
		</div>

		<!-- Navbar contents -->
		<div class="collapse navbar-collapse" id="menu">
			<!-- Navbar links -->
			<ul class="nav navbar-nav">
				<li><a href="#traffic" class="digest-link">Traffic</a></li>
				<li><a href="#weather" class="digest-link">Weather</a></li>
				<li><a href="#notes" class="digest-link">Notes</a></li>
				<li><a href="#calendar" class="digest-link">Calendar</a></li>
				<li class="nav-divider"></li>
			</ul>

			<!-- User settings dropdown -->
			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">{{guest.username}}<span class="caret"></span></a>
					<ul class="dropdown-menu" role="menu">
						<li><a href="#settings" class="digest-link">Settings</a></li>
						<li><a href="/" class="logout-button">Logout</a></li>
					</ul>
				</li>
			</ul>
		</div>
	</nav>

	<!-- TRAFFIC SECTION -->
	<div class="container" id="traffic">
		<br>
		<h4>Traffic</h4>
		<hr>

		<!-- Google Map object -->
		<div id="googleMap"></div>
	</div>

	<!-- WEATHER SECTION -->
	<div class="container" id="weather">
		<br>
		<h4>Weather</h4>
		<hr>
	</div>

	<!-- NOTES SECTION -->
	<div class="container" id="notes">
		<br>
		<h4>Notes</h4>
		<hr>
	</div>

	<!-- CALENDAR SECTION -->
	<div class="container" onload= "callingnow()" id="calendar">
		<br>
		<h4>Calendar</h4>
		<hr>
		

		<iframe	id="googleCalendar"  src="https://www.google.com/calendar/embed?src=qqjra2o5r6j02cp33v8no2qp6c%40group.calendar.google.com&ctz=America/Los_Angeles" scrolling="no">
		</iframe>
